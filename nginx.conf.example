# Nginx 配置示例
# 多域名配置 - 图片切分工具 + 云剪贴板 + 主页

# HTTP 重定向到 HTTPS (推荐在生产环境中启用)
# server {
#     listen 80;
#     server_name your-domain.com pic.your-domain.com copy.your-domain.com;
#     return 301 https://$server_name$request_uri;
# }

# 主服务器配置
server {
    listen 80;
    # listen 443 ssl http2;  # 生产环境启用 HTTPS

    # 多域名支持
    server_name your-domain.com pic.your-domain.com copy.your-domain.com;

    # SSL 证书配置 (生产环境)
    # ssl_certificate /path/to/your/fullchain.pem;
    # ssl_certificate_key /path/to/your/privkey.pem;
    # ssl_protocols TLSv1.2 TLSv1.3;
    # ssl_ciphers HIGH:!aNULL:!MD5;

    # 前端静态文件目录
    root /path/to/web_tools/frontend/dist;
    index index.html;

    # 启用 gzip 压缩
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml+rss;

    # 静态资源缓存
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # API 反向代理到后端 (WebSocket 支持)
    location /api/ {
        proxy_pass http://localhost:8080/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket 超时设置
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
    }

    # SPA 路由支持 - 所有请求都返回 index.html
    # 这样 React Router 可以处理域名路由
    location / {
        try_files $uri $uri/ /index.html;
    }

    # 安全头部
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
}

